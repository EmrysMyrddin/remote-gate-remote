templ OpenResult(message string, success bool) {
	@components.Alert(openResultKind(success), templ.Attributes{"id": "result", "autoClose": 5}) {
		{message}
	}
}

func openResultKind(success bool) string {
	if success {
		return "success"
	} else {
		return "error"
	}
}
